<Window x:Class="PasswordManagementSystem.Forms.TermsCondition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManagementSystem.Forms"
        mc:Ignorable="d"
        Title="TermsCondition" Height="500" Width="350"
        WindowStyle="None"
        Resources="{StaticResource RD_User}"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,350,500" 
                           RadiusX="10" RadiusY="10" />
    </Window.Clip>
    
    <Grid>

        <Grid Background="{DynamicResource MainColor_White}"
              MouseDown="MoveWindow">
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20,0,20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock VerticalAlignment="Center"
                               FontFamily="Montserrat"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource MainColor_Red}">
                        <Span>Terms and Condition</Span>
                    </TextBlock>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid>
                        <Button Background="#6DF054" 
                            HorizontalAlignment="Left"
                            Style="{DynamicResource TitleButtons}"
                            Click="MinimizeWindow"/>
                        <Button Background="#F0E054" 
                            HorizontalAlignment="Center"
                            Style="{DynamicResource TitleButtons}"
                            />
                        <Button Background="#F05454" 
                            HorizontalAlignment="Right"
                            Style="{DynamicResource TitleButtons}"
                            Click="ExitWindow"/>
                    </Grid>
                </Grid>
            </Grid>

            <Border Grid.Row="1"
                  Margin="20,0,20,20"
                  Background="White" CornerRadius="10">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <TextBlock Margin="20,20,20,20"
                                   FontFamily="Montserrat"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   TextAlignment="Justify"
                                   LineHeight="15">
                            Software Terms and Conditions The following Terms and Conditions apply to customer use of Cal‐Tek Co., Inc.’s calibration database utilizing iPortal interface software. 
                <LineBreak /> <LineBreak/>
